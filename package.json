{
  "private": true,
  "type": "module",
  "name": "vue-excalidraw-monorepo",
  "description": "Vue 3 component wrapping Excalidraw's React whiteboard editor",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspaces --if-present",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "npm run typecheck --workspaces",
    "test": "vitest run",
    "test:watch": "vitest",
    "release": "./scripts/release.sh"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-vue": "^10.7.0",
    "globals": "^17.3.0",
    "jsdom": "^28.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.5.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^4.0.18"
  }
}
